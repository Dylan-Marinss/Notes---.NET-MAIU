<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Editor
                x:Name="TextEditor"
                Placeholder="Digite seu Texto"
                HeightRequest="100" />

            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="4">
                <Button
                x:Name="SalvarBtn"
                Text="Salvar Notas"    
                SemanticProperties.Hint="Salva as notas"
                Clicked="SalvarBtn_Clicked"  />

                <Button Grid.Column="1"
            x:Name="ApagarBtn"
            Text="Apagar Notas"    
            SemanticProperties.Hint="Apagar as notas"
            Clicked="ApagarBtn_Clicked" />
            </Grid>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
